{
	"compilerOptions": {
		"module": "commonjs",
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"allowJs": true,
		"outDir": "dist",
		"checkJs": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"incremental": true,
		"noResolve": false,
		"noEmitOnError": false,
		"moduleResolution": "node",
		"skipLibCheck": true,
		"target": "es2020"
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}
