{
	"compilerOptions": {
		"module": "CommonJS",
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"allowJs": false,
		"outDir": "dist",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"incremental": true,
		"noResolve": false,
		"noEmitOnError": false,
		"moduleResolution": "node",
		"skipLibCheck": true,
		"target": "es2020",
		"noImplicitOverride": true,
		"strictBindCallApply": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}
